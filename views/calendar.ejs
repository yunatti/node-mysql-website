<!DOCTYPE html>
<html>
<head>
  <title>カレンダー</title>
</head>
<body>
  <h1>カレンダー</h1>
  <form action="/calendar/add" method="POST">
    <input type="text" name="title" placeholder="予定タイトル" required>
    <input type="date" name="date" required>
    <button type="submit">追加</button>
  </form>

  <ul>
    <% events.forEach(event => { %>
      <li><%= event.date %>: <%= event.title %></li>
    <% }) %>
  </ul>

  <a href="/">ホームに戻る</a>
</body>
</html>
