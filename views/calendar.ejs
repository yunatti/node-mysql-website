<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>ToDoカレンダー</title>
</head>
<body>
  <h1>ToDoカレンダー</h1>

  <ul>
    <% tasks.forEach(function(task) { %>
      <li><%= task.content %> - <%= task.due_date ? task.due_date.toISOString().slice(0, 10) : '未定' %></li>
    <% }); %>
  </ul>

  <form action="/calendar/add" method="POST">
  <input type="text" name="title" placeholder="やることを追加">
  <input type="date" name="event_date">
  <button type="submit">追加</button>
</form>

</body>
</html>
